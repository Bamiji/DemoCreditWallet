{
    "name": "demo-credit-wallet",
    "version": "1.0.0",
    "main": "dist/src/app.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "dev": "tsx --watch --env-file .env src/app.ts",
        "start": "node --env-file .env dist/src/app.js",
        "build": "tsc -p tsconfig.build.json",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "knex migrate:latest --env test && knex seed:run --env test && vitest --run",
        "test:run": "vitest --run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "prepare": "husky"
    },
    "author": "Olabanji Afolabi",
    "license": "UNLICENSED",
    "description": "",
    "type": "module",
    "lint-staged": {
        "*.{js,ts}": [
            "eslint",
            "prettier --check"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --check"
        ]
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "mysql2": "^3.13.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@tsconfig/node22": "^22.0.0",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.9",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "^3.0.8",
        "@vitest/eslint-plugin": "^1.1.36",
        "eslint": "^9.21.0",
        "eslint-plugin-perfectionist": "^4.9.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.3",
        "supertest": "^7.0.0",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0",
        "vitest": "^3.0.8"
    }
}
